// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id             String   @id @default(cuid())
  walletAddress  String   @unique @map("wallet_address")
  name           String
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  requestedJobs  Job[]       @relation("JobRequester")
  providedJobs   Job[]       @relation("JobProvider")
  services       Service[]
  sentTransactions     Transaction[] @relation("TransactionSender")
  receivedTransactions Transaction[] @relation("TransactionReceiver")

  @@map("agents")
}

model Job {
  id          String    @id @default(cuid())
  requesterId String    @map("requester_id")
  providerId  String?   @map("provider_id")
  title       String
  description String?
  amount      Decimal   @db.Decimal(18, 8) // Support crypto decimals
  status      JobStatus @default(OPEN)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  completedAt DateTime? @map("completed_at")

  // Relations
  requester Agent @relation("JobRequester", fields: [requesterId], references: [id])
  provider  Agent? @relation("JobProvider", fields: [providerId], references: [id])

  @@map("jobs")
}

model Service {
  id          String   @id @default(cuid())
  agentId     String   @map("agent_id")
  name        String
  description String?
  capability  String   // For search functionality
  price       Decimal  @db.Decimal(18, 8) // Price in AGNT
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  agent Agent @relation(fields: [agentId], references: [id])

  @@index([capability])
  @@index([isActive])
  @@map("services")
}

model Transaction {
  id        String            @id @default(cuid())
  fromAgent String            @map("from_agent")
  toAgent   String            @map("to_agent")
  amount    Decimal           @db.Decimal(18, 8)
  type      TransactionType
  txHash    String?           @map("tx_hash") // Blockchain transaction hash
  status    TransactionStatus @default(PENDING)
  createdAt DateTime          @default(now()) @map("created_at")
  updatedAt DateTime          @updatedAt @map("updated_at")

  // Relations
  sender   Agent @relation("TransactionSender", fields: [fromAgent], references: [id])
  receiver Agent @relation("TransactionReceiver", fields: [toAgent], references: [id])

  @@index([fromAgent])
  @@index([toAgent])
  @@index([txHash])
  @@map("transactions")
}

enum JobStatus {
  OPEN
  ASSIGNED
  IN_PROGRESS
  COMPLETED
  DISPUTED
  CANCELLED
}

enum TransactionType {
  PAYMENT
  REWARD
  STAKE
  REFUND
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  FAILED
}